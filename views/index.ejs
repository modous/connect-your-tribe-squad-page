<%- include('./partials/head') %>

<section>
  <h1><%= squad.name %></h1>

  <article class="sorteer">
    <h2>Klik op een knop om te sorteren:</h2>
    <article class="sorteer-lijst">
      <ul>
        <li><input type="checkbox"/><button class="gamen">Gamen</button></li>
        <li>
          <input type="checkbox"/><button class="netflix">Netflix</button>
        </li>
        <li>
          <input type="checkbox"/><button class="voetbal">Voetbal</button>
        </li>
      </ul>

      <ul>
        <li><input type="checkbox" /><button class="anime">Anime</button></li>
        <li><input type="checkbox" /><button class="crypto">Crypto</button></li>
      </ul>
    </article>
  </article>
</section>

<section class="boek-member">
  <article class="boek">
  <% squad.members.forEach(member => { %>
    <div class="card hide" id="<%= member.id %>">
  
    <% if (member.avatar) { %>
      <img src="<%= member.avatar %>" alt="De avatar van <%= member.name %>" />
      <% }else{ %>
      <img src="./media/download.jpeg" alt="Placeholder avatar" />
      <% } %>

   <h2><%= member.name %> <%= member.prefix %> <%= member.surname %> </h2>
   <h3>Student Frontend & design op het HVA</h3>

  </div>
    
   <% })  %>

  </article>
  <article class="boek">
  <% squad.members.forEach(member => { %>
    <div class="cardtext hide" id="<%= member.id + 1 %>">
    <h1>Bio </h1>
    <p>hallo</p>
  </div>
    <% })  %>
  </article>
</section>

<section class="all-members">
  <% squad.members.forEach(member => { %>
  <article class="member">
    <button class="trigger-member" data-id="<%= member.id %>">
    <% if (member.avatar) { %>
      <img src="<%= member.avatar %>" alt="De avatar van <%= member.name %>" />
    <% }else{ %>
      <img src="./media/download.jpeg" alt="Placeholder avatar" />
    <% } %>
        </button>
    <h2><%= member.name %> <%= member.prefix %> <%= member.surname %></h2>
  </article>
  <% }) %>
</section>



<%- include('./partials/foot') %>
