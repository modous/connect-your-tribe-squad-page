<%- include('./partials/head') %>

<section>
  <h1><%= squad.name %></h1>

  <article class="sorteer">
    <h2>Klik op een knop om te sorteren:</h2>
    <article class="sorteer-lijst">
      <ul>
        <li><input type="checkbox"/><button class="gamen">Gamen</button></li>
        <li>
          <input type="checkbox"/><button class="netflix">Netflix</button>
        </li>
        <li>
          <input type="checkbox"/><button class="voetbal">Voetbal</button>
        </li>
      </ul>

      <ul>
        <li><input type="checkbox" /><button class="anime">Anime</button></li>
        <li><input type="checkbox" /><button class="crypto">Crypto</button></li>
      </ul>
    </article>
  </article>
</section>

<section class="boek-member">
  <article class="boek">
  <% squad.members.forEach(member => { %>
    <div class="card hide" id="<%= member.id %>">
  
    <% if (member.avatar) { %>
      <img  class="boek-image" src="<%= member.avatar %>" alt="De avatar van <%= member.name %>" />
      <% }else{ %>
      <img  class="boek-image" src="./media/download.jpeg" alt="Placeholder avatar" />
      <% } %>
  <div class="content-links">
    <h2><%= member.name %> <%= member.prefix %> <%= member.surname %> </h2>
    <h3><%= member.role %> Frontend & design op het HVA</h3>
  </div>
  </div>
    
   <% })  %>

  </article>
  <article class="boek">
  <% squad.members.forEach(member => { %>
    <div class="cardtext hide" id="<%= member.id + 1 %>">
    <h1>Bio </h1>
    
    <% if (member.bio) { %>
      <p class="bio"><%=  member.bio.html %></p>
      <% }else{ %>
        <p>Geen Bio</p>
      <% } %>
    <h1>Contact</h1>
    <% if (member.gitHubHandle) { %>
      <p class="bio"> <strong>gitHubHandle:</strong><br><%=  member.gitHubHandle %>
      
      </p>
      <% }else{ %>
        <p class="bio">Geen githubhandle</p>
      <% } %>
      <% if (member.website) { %>
        <p class="bio"> <strong>Webiste:</strong><br>
          <a href="<%=  member.website %>">Bekijk visitekaartje</a>
        
        </p>
        <% }else{ %>
          <p class="bio">Geen website</p>
        <% } %>

  </div>
    <% })  %>
  </article>
</section>

<section class="all-members">
  <% squad.members.forEach(member => { %>
  <article class="member">
    <button class="trigger-member" data-id="<%= member.id %>">
    <% if (member.avatar) { %>
      <img class="members-image" src="<%= member.avatar %>" alt="De avatar van <%= member.name %>" />
    <% }else{ %>
      <img class="members-image" src="./media/download.jpeg" alt="Placeholder avatar" />
    <% } %>
        </button>
    <h2><%= member.name %> <%= member.prefix %> <%= member.surname %></h2>
  </article>
  <% }) %>
</section>



<%- include('./partials/foot') %>
